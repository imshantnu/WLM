<div class="memeForm" id="memeForm">
    <label>Image File:</label>
    <input type="file" id="imageLoader" name="imageLoader"/>
    <label>Top Line:</label>
    <input type="text" id="topLine" name="topLine" maxlength="45"/>
    <label>Bottom Line:</label>
    <input type="text" id="bottomLine" name="bottomLine" maxlength="45"/><br/>
    <input type="button" name="Generate" value="Generate!" id="generateMeme"/>
    <input type="button" name="Save" value="Save!" id="saveMeme"/>
    <input type="button" name="Clear" value="Clear!" id="clearMeme" />
    <canvas id="memeCanvas"></canvas>
</div>